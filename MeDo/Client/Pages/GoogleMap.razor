@page "/googlemap"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

@inject IJSRuntime JSRuntime


<h1>Display Google Map</h1>
<div id="google-map" style="height:500px;width:100%;">
</div>

@code{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializeGoogle", "./JS/googleMaps.js");
        }
    }
}